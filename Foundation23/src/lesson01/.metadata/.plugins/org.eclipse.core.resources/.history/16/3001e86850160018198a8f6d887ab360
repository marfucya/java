package lesson5;

public class Task07IndependenceWork8III {
	private static final char String = 0;

	public static void main (String [] args)
	{
		String str = "hjdfhop oytfg tdxc";
		myMethod(str);
		//System.out.println(myMethod(str));
	}
	
	public static String myMethod (String s)
	{
		int strlen = s.length();
		char[] reversedStr = new char[strlen];
		
		for (int i = 0; i <= strlen/2; i++)
		{
			reversedStr[i] = s.charAt(strlen-1-i);
			reversedStr[strlen-1-i] = s.charAt(i)
		}
		return new String (reversedStr);
	}
}

